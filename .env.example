# Airtable Configuration
# Get your API key from https://airtable.com/create/tokens
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_base_id_here

# Airtable Table IDs
AIRTABLE_TABLE_ID_PROJECTS=your_projects_table_id
# Legacy fallback (use AIRTABLE_TABLE_ID_PROJECTS instead)
# AIRTABLE_TABLE_ID=your_projects_table_id

AIRTABLE_TABLE_ID_ORGANIZATIONS=your_organizations_table_id

# Note: Use either spelling (typo in original, both supported)
AIRTABLE_TABLED_ID_AGENCIES=your_agencies_table_id
# AIRTABLE_TABLE_ID_AGENCIES=your_agencies_table_id

AIRTABLE_TABLE_ID_THEMES=your_themes_table_id

# Airtable Settings
AIRTABLE_TIMEZONE=UTC
AIRTABLE_USER_LOCALE=en-US

# IATI Configuration
# Get your API key from https://developer.iatistandard.org/
# Required for fetching IATI (International Aid Transparency Initiative) data
# Rate Limit: 5 requests/second, Quota: 25,000 requests/day
IATI_PRIMARY_KEY=your_iati_api_key_here

# Public URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_SURVEY_URL=https://airtable.com/apprObB2AsvMwfAAl/pagcre1SPjT0nJxa4/form

# Deployment (auto-set by Vercel, not needed for local development)
# VERCEL_ENV=production
